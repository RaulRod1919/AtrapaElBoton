@{
    ViewData["Title"] = "Home Page";
}

<h1>Atrapa el Botón</h1>

<div class="accessibility-controls" role="region" aria-label="Controles de accesibilidad">
    <button class="button" id="toggle-contrast" aria-pressed="false" title="Modo alto contraste" tabindex="0">Contraste+</button>

    <button class="button" id="font-decrease" title="Disminuir tamaño de fuente" tabindex="0">A-</button>
    <button class="button" id="font-reset" title="Restablecer tamaño de fuente" tabindex="0">A</button>
    <button class="button" id="font-increase" title="Aumentar tamaño de fuente" tabindex="0">A+</button>
</div>


<!-- pokeAPI-->
<div class="poke-controls" aria-label="Buscador de Pokémon" style="margin:12px 0;">
    <input id="poke-query" type="text" placeholder="Nombre o id (ej. pikachu o 25)" aria-label="Nombre o id del Pokémon" />
    <button class="button" id="poke-search">Buscar</button>
    <button class="button" id="poke-random">Aleatorio</button>
</div>


<div id="poke-result" aria-live="polite" style="margin-top:12px;">
</div>

<div class="info" aria-live="polite">
    <p id="time">Tiempo: </p>
    <p id="puntos">Puntos: </p>
</div>

<div class="container" aria-label="Área del juego">
    <button class="button" id="bandera" disabled aria-label="Botón objetivo">
        :)
    </button>
</div>

<button class="button" id="inicio" aria-label="Iniciar juego" tabindex="0">
    INICIAR
</button>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="~/js/Model.js"></script>
    <script src="~/js/View.js"></script>
    <script src="~/js/Controller.js"></script>

    @* poke *@
    <script src="~/js/poke.js"></script>
}
